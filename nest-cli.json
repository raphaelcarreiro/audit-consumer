{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true
  },
  "watchOptions": {
    "ignored": ["dist/**"],
    "usePolling": true,
    "interval": 500
  }
}
